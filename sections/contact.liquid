              <div class="contact_form-block w-form">
               <div class="contact_form-block w-form">
  {% form 'contact', return_to: '/pages/thank-you?submitted=true', class: 'contact_form' %}
    
    <div class="form_field-wrapper">
      <label for="Full-Name" class="form_field-label">{{ section.settings.text_full_name }}</label>
      <input 
        class="form_input w-input" 
        name="contact[name]" 
        placeholder="Your Name" 
        type="text" 
        id="Full-Name" 
        required 
        minlength="3"
        pattern="^[a-zA-Z\s]*$"
        title="Please use only letters and spaces (e.g., John Doe)"
      >
    </div>

    <div class="form_field-wrapper">
      <label for="Phone" class="form_field-label">{{ section.settings.text_phone_number }}</label>
      <div style="display: flex; gap: 8px; align-items: center;">
        <span style="background: #f4f4f4; padding: 12px; border: 1px solid #ccc; border-radius: 4px; color: #555; font-weight: bold;">+1</span>
        <input 
          class="form_input w-input" 
          name="contact[phone]" 
          type="tel" 
          id="Phone" 
          required 
          placeholder="(555) 555-5555"
          pattern="^(\(?\d{3}\)?[\s.-]?)?\d{3}[\s.-]?\d{4}$"
          title="Please enter a 10-digit US phone number (e.g., 555-555-5555)"
        >
      </div>
    </div>

    <div class="form_field-wrapper">
      <label for="Email-Input" class="form_field-label">{{ section.settings.text_email_label }}</label>
      <input 
        class="form_input w-input" 
        name="contact[email]" 
        placeholder="email@example.com" 
        type="email" 
        id="Email-Input" 
        required
      >
    </div>

    <div class="form_field-wrapper">
      <label for="Message-2" class="form_field-label">{{ section.settings.text_message }}</label>
      <textarea 
        class="form_input is-text-area w-input" 
        name="contact[body]" 
        id="Message-2" 
        required
      ></textarea>
    </div>

    <input type="submit" data-wait="Please wait..." class="button w-button" value="Submit">
  {% endform %}

  <div class="success-message w-form-done">
    <div class="success-text">Thank you! Your submission has been received!</div>
  </div>
  <div class="error-message w-form-fail">
    <div class="error-text">Oops! Something went wrong while submitting the form.</div>
  </div>
