<style>
  /* Apply fixed aspect ratio to the slider container */
  .swiper.is-home-hero {
    width: 100% !important;
    aspect-ratio: 3 / 2 !important; /* Width / Height */
    height: auto !important; /* Override any fixed heights from Webflow */
    position: relative !important;
  }

  /* Ensure background images and videos cover the 3:2 area perfectly */
  .image-hero_bg, 
  .image-hero_bg-image, 
  .image-hero_video-wrapper video {
    width: 100% !important;
    height: 100% !important;
    object-fit: cover !important;
  }
  /* 1. The main wrapper acts as the anchor for the corners */
  .home-hero_controls {
    position: absolute !important;
    inset: 0% 0% 0% 0% !important;
    z-index: 100 !important;
    pointer-events: none !important; /* Allows clicking items behind the container */
  }

  /* 2. Move Arrows to the Lower Left */
  .home-hero_navigation {

    display: flex !important;
    gap: 12px !important;
    pointer-events: auto !important; /* Enables clicking the arrows */
  }

  /* 3. Keep Pagination in the Lower Right */
  .swiper_pagination {

    display: flex !important;
    gap: 8px !important;
    width: auto !important;
    pointer-events: auto !important; /* Enables clicking the bullets */
  }

  /* 4. Arrow Styling (Square outlines per your reference) */
  .swiper_button {
    cursor: pointer !important;
    width: 48px !important;
    height: 48px !important;
    border: 1px solid white !important;
    background: transparent !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    transition: background 0.2s ease;
  }

  .swiper_button:hover {
    background: rgba(255, 255, 255, 0.1) !important;
  }

  /* Ensure the SVG inside the button scales correctly */
  .swiper_button-icon {
    width: 24px !important;
    height: auto !important;
  }

  /* Standard Swiper Engine Fixes */
  .swiper-wrapper { display: flex !important; }
  .swiper-slide { flex-shrink: 0 !important; width: 100% !important; }
</style>
            <script>
function initSwiper() {
  const swiperComponents = document.querySelectorAll(".swiper_component");
  swiperComponents.forEach((component) => {
    const swiperEl = component.querySelector(".swiper");
    if (swiperEl && !swiperEl.classList.contains('swiper-initialized')) {
      new Swiper(swiperEl, {
        speed: 800,
        loop: true,
        slidesPerView: 1,
        navigation: {
          // Specific selection inside THIS component
          nextEl: component.querySelector(".swiper-next"),
          prevEl: component.querySelector(".swiper-prev"),
        },
        pagination: {
          el: component.querySelector(".swiper_pagination"),
          bulletActiveClass: "is-active",
          bulletClass: "swiper_bullet",
          clickable: true,
        },
      });
    }
  });
}
// Initialization Logic
if (document.readyState === "complete" || document.readyState === "interactive") {
  initSwiper();
} else {
  document.addEventListener("DOMContentLoaded", initSwiper);
}
document.addEventListener('shopify:section:load', initSwiper);
</script>
