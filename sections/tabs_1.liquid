<style>.button.is-tab-button {
  opacity: 60%;
}
.button.is-tab-button.is-active {
  opacity: 100%;
}
</style>
        <div class="padding-global padding-section-large">
          <div class="container-large">
            <div class="tabs_flex">
              <div x-data="{tab: 1}" class="tabs_element_og">
                <div li-for:inside="block in section.blocks" class="tabs_menu_og">
        {% for block in section.blocks %}                            {% if block.type == 'tab' %}    <button x-bind:class="tab === {{forloop.index}} ? 'is-active' : ''" x-on:click="tab = {{forloop.index}}" role="tab" aria-controls="panel-{{section.index}}-{{forloop.index}}" tabindex="0" id="tab-{{section.index}}-{{forloop.index}}" x-bind:aria-selected="tab === {{forloop.index}} ? 'true' : 'false'" li-if="block.type == 'tab'" class="button is-tab">
    
                    <div li-object="block.settings.text_tab_label" class="heading-style-h7">{{ block.settings.text_tab_label }}</div>
                      </button>
{% endif %}
                    {% endfor %}    </div>
                <div class="tabs_body">
                  {% for block in section.blocks %}
    {% if block.type == "tab" %}
                    <div id="panel-{{section.index}}-{{forloop.index}}" x-show="tab === {{forloop.index}}" aria-labelledby="tab-{{section.index}}-{{forloop.index}}" role="tabpanel" x-bind:aria-hidden="tab === {{forloop.index}} ? 'false' : 'true'" x-cloak="" li-block="Tab" class="tabs_panel">
                                    
                    
                                    <div class="tabs_panel-content">
                      <div>
{{ block.settings.text_text }}
</div>
                    </div>
                                    
                    
                                    <a href="{{ block.settings.url_button_link }}" class="button-2 w-button"> {{ block.settings.text_button_text }} </a>
                                    
                    
                                    <div class="hide-2">
{{ block.settings.text_tab_label }}
</div>
                                    
                  
                            </div>
            {% endif %}
{% endfor %}
                </div>
              </div>
            </div>
          </div>
        </div> {% schema %} {
    "tag": "section",
    "name": "Tabs 1",
    "class": "section_tabs background-color-secondary",
    "blocks": [
        {
            "name": "Tab",
            "type": "tab",
            "settings": [
                {
                    "id": "text_text",
                    "type": "text",
                    "label": "Text",
                    "default": "Tab Text"
                },
                {
                    "id": "url_button_link",
                    "type": "url",
                    "label": "Button Link"
                },
                {
                    "id": "text_button_text",
                    "type": "text",
                    "label": "Button Text",
                    "default": "Button Text"
                },
                {
                    "id": "text_tab_label",
                    "type": "text",
                    "label": "Tab Label",
                    "default": "This is some text inside of a div block."
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Tabs 1",
            "category": "Liquify",
            "blocks": [
                {
                    "type": "tab"
                }
            ]
        }
    ]
} {% endschema %}