<div class="padding-global padding-section-medium">
          <div class="container-small">
            <div class="text-align-center">
              <div class="max-width-xlarge align-center">
                <div class="margin-bottom margin-small">
                  <h1 class="heading-style-h1">
{{ section.settings.text_heading }}
</h1>
                </div>
                <p class="text-size-medium">
{{ section.settings.text_paragraph }}
</p>
                <div class="margin-top margin-medium">
                  <div class="button-group is-center">
                    <a li-object:href="routes.root_url" href="{{ routes.root_url }}" class="button w-button"><span>
{{ section.settings.text_button_text }}
</span></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div> 

        <script>
  /**
   * Clears the cart only if the URL contains '?submitted=true'
   * This prevents abandoned cart emails after a callback request.
   */
  (function() {
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('submitted') === 'true') {
      fetch(window.Shopify.routes.root + 'cart/clear.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      })
      .then(response => {
        // Notifies your header/minicart to update the item count to 0
        window.dispatchEvent(new CustomEvent('cartupdated'));
        
        // Clean the URL so refreshing the page doesn't try to clear the cart again
        const newUrl = window.location.protocol + "//" + window.location.host + window.location.pathname;
        window.history.replaceState({path:newUrl}, '', newUrl);
      })
      .catch(error => console.error('Error clearing cart:', error));
    }
  })();
</script>

