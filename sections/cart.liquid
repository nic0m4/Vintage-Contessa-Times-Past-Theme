  <div class="cart_grid-wrapper" style="display: grid; grid-template-columns: 2fr 1fr; gap: 30px; align-items: start;">
    
    <div class="cart_table outline-solid-1">
      {% form 'cart', cart %}
        <div class="cart_grid is-header w-hidden-tiny">
          <div class="cart_table-header"><p class="text-size-regular">{{ section.settings.text_product }}</p></div>
          <div class="cart_table-header"><p class="text-size-regular">{{ section.settings.text_quantity }}</p></div>
          <div class="cart_table-header"><p class="text-size-regular">{{ section.settings.text_price }}</p></div>
        </div>

        {% for item in cart.items %}
          {% endfor %}

        <div style="padding: 20px; text-align: right; border-top: 1px solid #eee;">
          <input type="submit" class="button is-outline w-button" value="Update Quantities" style="width: auto; min-width: 180px;">
        </div>
      {% endform %}
    </div>

    <div id="w-node-_4ff72092-e0e6-d591-6af1-5b10f594a655-f594a625" class="cart_wrapper-right">
      <div class="cart_table outline-solid-1" style="padding: 20px;">
        <div class="cart_table-header" style="margin-bottom: 15px;">
          <p class="text-size-regular">{{ section.settings.text_summary }}</p>
        </div>
        
        <div class="cart_details-price" style="margin-bottom: 20px;">
          <div class="text-size-large">Total: {{ cart.total_price | money }}</div>
        </div>

        {% form 'contact' %}
          {% if form.posted_successfully? %}
            <p style="color: green;">We received your request and will call you soon!</p>
          {% else %}
            <div class="form_field-wrapper">
              <label for="ContactFormName">Full Name</label>
              <input type="text" name="contact[name]" class="form_input w-input" required>
            </div>
            <div class="form_field-wrapper" style="margin-top: 10px;">
              <label for="ContactFormEmail">Email Address</label>
              <input type="email" name="contact[email]" class="form_input w-input" required>
            </div>
            <div class="form_field-wrapper" style="margin-top: 10px;">
              <label for="ContactFormPhone">Phone Number</label>
              <input type="tel" name="contact[phone]" class="form_input w-input" required>
            </div>
            <div class="form_field-wrapper" style="margin-top: 10px;">
              <label for="ContactFormNote">Comment</label>
              <textarea name="contact[note]" class="form_input is-text-area w-input" style="height: 80px;"></textarea>
            </div>

            <textarea name="contact[body]" style="display:none;">
              Items: {% for item in cart.items %}{{ item.quantity }}x {{ item.title }} | {% endfor %}
            </textarea>

            <input type="submit" class="button w-button" value="Request Callback" style="width: 100%; margin-top: 15px;">
          {% endif %}
        {% endform %}
      </div>
    </div>

  </div> </div>
{% endif %}
                  

              <div class="w-form-done">
