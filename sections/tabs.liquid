    {{ block.settings.image_3 | image_url: width: 1000 | image_tag: loading: 'lazy', class: 'tab-img' }}
  {% endif %}
</div>
                                    

                                    <div class="hide">
{{ block.settings.text_tab_label }}
</div>
                                    
                  
                            </div>
            {% endif %}
{% endfor %}
